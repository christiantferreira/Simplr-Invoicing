    "waveSystem": {
      "autoActivationThreshold": 0.7,
      "fileCountThreshold": 20,
      "operationTypesThreshold": 2,
      "strategies": {
        "progressive": "Incremental enhancement for iterative improvements",
        "systematic": "Methodical analysis for complex problems",
        "adaptive": "Dynamic configuration based on varying complexity",
        "enterprise": "Large-scale orchestration for >100 files"
      }
    },
    "languageDetection": {
      "portuguese": {
        "keywords": [
          "por favor",
          "preciso",
          "quero",
          "pode",
          "como",
          "fazer",
          "criar",
          "melhorar"
        ],
        "technicalTerms": [
          "componente",
          "função",
          "arquivo",
          "código",
          "sistema",
          "aplicação"
        ],
        "culturalContext": "Brazilian tech preferences, LGPD considerations, mobile-first"
      },
      "english": {
        "keywords": [
          "please",
          "need",
          "want",
          "can",
          "how",
          "create",
          "build",
          "implement",
          "improve"
        ],
        "technicalTerms": [
          "component",
          "function",
          "file",
          "code",
          "system",
          "application"
        ],
        "culturalContext": "US enterprise patterns, accessibility standards, international practices"
      }
    },
    "qualityGates": {
      "enabled": true,
      "steps": [
        "syntax_validation",
        "type_checking",
        "lint_compliance",
        "security_assessment",
        "test_coverage",
        "performance_validation",
        "documentation_review",
        "integration_testing"
      ],
      "thresholds": {
        "unit_test_coverage": 80,
        "integration_test_coverage": 70,
        "performance_budget": "3s_load_time",
        "accessibility": "WCAG_2.1_AA"
      }
    }
